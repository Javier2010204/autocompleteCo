<h1>Listado de productos</h1>
<div id="products">
	<% @products.each do |product| %>
		<div class="product">
			<h2><%= link_to product.name, product %></h2>
			<div class="details">
				<%= number_to_currency(product.price) %>
				<% if product.category %>
					Category: <%= product.category.name%>
				<% end %>
				<%= link_to 'Editar', edit_product_path(product) %>
			</div>
		</div>
	<% end %>
</div>
<p>
	<%= link_to "Agregar nuevo producto", new_product_path%>
</p>